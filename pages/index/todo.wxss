/* pages/index/todo.wxss */

page {
  background-color: #ffffff;
  height: 100%;
}
swiper {
  height: 770rpx;
  position: relative;
}

swiper-item image {
  width: 750rpx;
  height: 770rpx;
}

.product-info {
  padding: 0 50rpx;
}

.product-info .text {
  font-size: 34rpx;
  color: rgba(0,0,0,0.90);
  line-height: 52rpx;
  margin-top: 30rpx;
  max-height: 104rpx;
}

.product-info .price-info {
  margin-top: 10rpx;
}

.product-info .price {
  font-size: 44rpx;
  color: #D70C18;
  line-height: 60rpx;
  font-weight: bold;
}

.product-info .old-price {
  position: relative;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: rgba(0,0,0,0.20);
  line-height: 60rpx;
}

.product-info .old-price:before {
  content: '';
  position: absolute;
  background: #B2B2B2;
  width: 110%;
  height: 2rpx;
  left: 0;
  top: 49%;
}

.product-info .eye {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.product-info .number {
  font-size: 28rpx;
  color: #939393;
  line-height: 42rpx;
  margin-left: 20rpx;
}

.after-sale {
  display: inline-block;
  line-height: 40rpx;
  margin-left: 50rpx;
  margin-top: 10rpx;
}


.modal-bg {
  position: fixed;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.50);
  top:0;
  left: 0;
}

.modal-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 722rpx;
  background: #fff;
  z-index: 1000;
}

.modal-header {
  height: 100rpx;
}

.modal-header image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  padding-top: 30rpx;
  padding-right: 30rpx;
  margin-left: 46rpx;
}

.modal-content {
  padding-left: 50rpx;
  padding-right: 20rpx;
  height: 522rpx;
  overflow: auto;
}

.modal-content .info {
  height: 160rpx;
  overflow: hidden;
  display: flex;
  margin-right: 50rpx;
}

.modal-content .info .img {
  width: 160rpx;
  height: 160rpx;
}

.modal-content .info .info-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx 0 10rpx 30rpx;
}

.modal-content .info-text .desc{
  height: 92rpx;
  line-height: 38rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  white-space: pre-wrap;
}

.modal-content .info .price {
  font-size: 44rpx;
  color: #D70C18;
  line-height: 58rpx;
  margin-top: 10rpx;
}

.modal-content .choise {
  padding-top: 20rpx;
}

.modal-content .choise .title {
  font-size: 30rpx;
  color: rgba(0,0,0,0.90);
  line-height: 46rpx;
}

.modal-content .choise .change-num {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 50rpx;
}

.modal-content .choise .change-num .product-num{
  width: 30rpx;
  text-align: center;
}

.modal-content .choise .change-num .num {
  width: 60rpx;
  height: 60rpx;
}

.modal-content .choise .change-num .reduce {
  margin-right: 30rpx;
  padding-right: 0;
  background: url("data:image/png;base64,") center center no-repeat;
  background-size: 60rpx 60rpx;
}
.modal-content .choise .change-num .reduce.mask {
  background: url("data:image/png;base64,") center center no-repeat;
  background-size: 60rpx 60rpx;
}

.modal-content .choise .change-num .add {
  margin-left: 30rpx;
  padding-left: 0;
  background: url("data:image/png;base64,") center center no-repeat;
  background-size: 60rpx 60rpx;
}
.modal-content .choise .change-num .add.mask {
  margin-left: 30rpx;
  padding-left: 0;
  background: url("data:image/png;base64,") center center no-repeat;
  background-size: 60rpx 60rpx;
}

.modal-content .choise .desc .btn-choise {
  display: inline-block;
  border: 1px solid #D8D8D8;
  border-radius: 4rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  padding: 0 38rpx;
}

.modal-content .choise .desc .btn-gray {
  color: #D8D8D8;
}

.modal-content .choise .desc .btn-choise.active {
  border: 1px solid #D70C18;
  color: #D70C18;
}

.modal-footer {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}

.modal-footer .next-step {
  width: 100%;
  height: 100rpx;
  background: #D70C18;
  font-size: 34rpx;
  color: #FFFFFF;
  line-height: 100rpx;
  text-align: center;
}
.modal-footer .next-step.hover {
  opacity: 0.5
}

.no-stock {
  width: 212rpx;
  line-height:70rpx;
  position: absolute;
  left: 50%;
  top: 385rpx;
  transform: translate(-50%,-50%);
  color: #ffffff;
  opacity: 0.6;
  background: #171A23;
  border-radius: 10rpx;
  text-align: center;
}

.product-detail-img:first-child {
  margin-top: 30rpx;
}
.product-detail-img {
  width: 100%;
}
.product-detail-img:last-child {
  margin-bottom: 30rpx;
}

.ban-scroll {
  height: 100%;
  overflow: hidden;
}

